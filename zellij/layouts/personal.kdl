layout {
	swap_floating_layout {
		floating_panes {
			pane {
				width "80%"
				height "80%"
				x "10%"
				y "10%"
			}
		}
	}
    default_tab_template split_direction="horizontal" {
		pane {
            size 1
			borderless true
			plugin location="zellij:tab-bar"
        }
		pane cwd="~/"
		pane {
			size 1
			borderless true
			plugin location="zellij:status-bar"
		}
    }
}
