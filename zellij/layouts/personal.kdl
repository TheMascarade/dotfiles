layout {
	swap_floating_layout {
		floating_panes {
			pane {
				width "90%"
				height "80%"
				x "5%"
				y "10%"
				cwd "$PWD"
			}
		}
	}
    default_tab_template {
		pane {
            size 1
			borderless true
			plugin location="zellij:tab-bar"
        }
		children
		pane {
			size 1
			borderless true
			plugin location="zellij:status-bar"
		}
    }
}
